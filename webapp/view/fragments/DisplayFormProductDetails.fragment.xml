<FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<FormElement label="{i18n>productIdLabel}">
		<fields>
			<Text text="{product>/ID}" />
		</fields>
	</FormElement>
	<FormElement label="{i18n>productNameLabel}">
		<fields>
			<Text text="{appView>/product/Name}" />
		</fields>
	</FormElement>
	<FormElement label="{i18n>productPriceLabel}">
		<fields>
			<Text text="{ path: 'appView>/product/Price', type: 'sap.ui.model.type.Float', formatOptions: { decimals: 2 }, constraints: { minimum: 0, maximum: 10000 } }" />
		</fields>
	</FormElement>
	<FormElement label="{i18n>productRatingLabel}">
		<fields>
			<Text text="{appView>/product/Rating}" />
		</fields>
	</FormElement>
	<FormElement label="{i18n>productCategoryLabel}">
		<fields>
			<Text text="{appView>/product/Category/Name}" />
		</fields>
	</FormElement>
	<FormElement label="{i18n>productSupplierLabel}">
		<fields>
			<Text text="{appView>/product/Supplier/Name}" />
		</fields>
	</FormElement>
	<FormElement label="{i18n>productStatusLabel}">
		<fields>
			<Text text="{appView>/product/Status}" />
		</fields>
	</FormElement>
	<FormElement label="{i18n>productDateLabel}">
		<fields>
			<Text text="{ path: 'appView>/product/Date', type: 'sap.ui.model.type.Date', formatOptions: {style: 'medium', source: {pattern: 'yyyy-MM-dd'} } }" />
		</fields>
	</FormElement>
	<FormElement label="{i18n>productFactoryLabel}">
		<fields>
			<Text text="{appView>/product/Factory}" />
		</fields>
	</FormElement>
	<FormElement label="{i18n>productContractLabel}">
		<fields>
			<Text text="{appView>/product/Contract}" />
		</fields>
	</FormElement>
	<FormElement label="{i18n>productColorLabel}">
		<fields>
			<Text text="{appView>/product/Color}" />
		</fields>
	</FormElement>
</FragmentDefinition>
