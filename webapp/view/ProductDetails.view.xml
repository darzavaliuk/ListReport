<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:f="sap.f"
        height="100%"
        xmlns:form="sap.ui.layout.form"
        controllerName="darya.zavaliuk.controller.ProductDetails"
>
    <f:DynamicPage id="dynamicPageProductDetails"
                   showFooter="{=!!${state>/isEditPage}}"
                   class="sapUiNoContentPadding">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{product>/Name}"/>
                </f:heading>
                <f:expandedContent>
                    <Label text="{product>/Description}"/>
                </f:expandedContent>
                <f:snappedContent>
                    <Label text="{product>/Description}"/>
                </f:snappedContent>
                <f:snappedTitleOnMobile>
                    <Title text="{product>/Description}"/>
                </f:snappedTitleOnMobile>
                <f:actions>
                    <Button
                            text="{i18n>editButton}"
                            visible="{=!${state>/isEditPage}}"
                            type="Emphasized"
                            press="onPressEditProduct"/>
                    <Button
                            text="{i18n>deleteButton}"
                            visible="{=!${state>/isEditPage}}"
                            type="Transparent"
                            press="onPressDeleteProduct"/>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <FlexBox wrap="Wrap" fitContainer="true">
                    <Avatar src="./images/robot.png"
                            class="sapUiMediumMarginEnd sapUiSmallMarginBottom"
                            displayShape="Square"
                            displaySize="L"/>
                    <VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                        <HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <Label text="{i18n>IDTitle}" class="sapUiTinyMarginEnd"/>
                            <Text text="{product>/ID}"/>
                        </HBox>
                        <HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <Label text="{i18n>nameTitle}" class="sapUiTinyMarginEnd"/>
                            <Text text="{product>/Name}"/>
                        </HBox>
                        <HBox class="sapUiTinyMarginBottom" renderType="Bare">
                            <Label text="{i18n>categoryTitle}" class="sapUiTinyMarginEnd"/>
                            <Text text="{product>/Category/Name}"/>
                        </HBox>
                        <HBox>
                            <Label text="{i18n>supplierTitle}" class="sapUiTinyMarginEnd"/>
                            <Text text="{product>/Supplier/Name}"/>
                        </HBox>
                    </VBox>
                    <VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                        <Title text="{i18n>statusTitle}" class="sapUiSmallMarginBottom"/>
                        <ObjectStatus class="sapSObjectStatusLarge"
                                      text="{product>/Status}"
                                      icon="{ path: 'product>/Status', formatter: '.formatter.statusIconFormatter' }"
                                      state="{ path: 'product>/Status', formatter: '.formatter.statusFormatter' }"
                        />
                    </VBox>
                    <VBox class="sapUiLargeMarginEnd">
                        <Title text="{i18n>priceTitle}" class="sapUiSmallMarginBottom"/>
                        <ObjectNumber number="{product>/Price}"
                                      unit="USD"
                                      emphasized="false"/>
                    </VBox>
                    <VBox class="sapUiLargeMarginEnd">
                        <Title text="{i18n>ratingTitle}" class="sapUiTinyMarginBottom"/>
                        <RatingIndicator editable="false" value="{product>/Rating}" iconSize="16px"/>
                    </VBox>
                </FlexBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter text="{i18n>generalTitle}">
                        <form:Form id="iconTabBarForm"
                                   editable="true">
                            <form:layout>
                                <form:ColumnLayout columnsM="2"/>
                            </form:layout>
                            <form:formContainers>
                                <form:FormContainer id="formContainerForGeneralPart">

                                </form:FormContainer>
                            </form:formContainers>
                        </form:Form>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <Button id="messagePopoverBtn"
                        visible="{=!!${messages>/}.length}"
                        text="{=${messages>/}.length}"
                        icon="sap-icon://error"
                        type="Negative"
                        press="handleMessagePopoverPress"
                        ariaHasPopup="Dialog"
                />
                <ToolbarSpacer/>
                <Button text="{i18n>save}" type="Emphasized" press="onPressCreateProduct"/>
                <Button text="{i18n>cancel}" type="Transparent" press="onPressCancel"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>