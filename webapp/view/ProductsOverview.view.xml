<mvc:View
        controllerName="darya.zavaliuk.controller.ProductsOverview"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:f="sap.f"
        xmlns:fb="sap.ui.comp.filterbar"
        xmlns:core="sap.ui.core"
        height="100%"
>
    <f:DynamicPage
            id="dynamicPageProductOverview"
            class="sapUiNoContentPadding"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <VariantManagement items="{/Variants}" selectedKey="0"
                                       defaultKey="0" id="variantManagement">
                        <VariantItem text="{VariantName}" key="{VariantKey}"/>
                    </VariantManagement>
                </f:heading>
                <f:expandedContent>
                    <Label text="{appView>/filterText}"/>
                </f:expandedContent>
                <f:snappedContent>
                    <Label text="{appView>/filterText}"/>
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                            id="filterBarProductOverview"
                            class="searchInputLabel"
                            useToolbar="false"
                            search="onPressConfirmFilters"
                            afterVariantLoad="onAfterVariantLoad"
                            afterVariantSave="onPressConfirmFilters"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                    id="productId"
                                    class="searchInputLabel"
                                    label="{i18n>labelFilterBarSearch}"
                                    name="Product"
                                    groupName="Basic"
                                    visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <SearchField
                                            width="100%"
                                            class="searchInputLabel"
                                            id="searchField"
                                            change="onSelectionChange"
                                            search="onSearchStores"
                                            placeholder="{i18n>productsOverviewSearchPlaceholder}"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                    name="Category"
                                    label="{i18n>labelFilterBarCategory}"
                                    groupName="Basic"
                                    visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                            id="Category"
                                            name="Category"
                                            selectionChange="onSelectionChange"
                                            placeholder="{i18n>productsOverviewCategory}"
                                            items="{
                                                path: '/Categories',
                                                templateShareable: true
                                            }"
                                    >
                                        <core:Item key="{key}" text="{Name}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                    name="Supplier"
                                    label="{i18n>labelFilterBarSupplier}"
                                    groupName="Basic"
                                    visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                            id="Supplier"
                                            name="Supplier"
                                            selectionChange="onSelectionChange"
                                            placeholder="{i18n>productsOverviewSupplier}"
                                            items="{
                                            path: '/Suppliers',
                                            templateShareable: true
                                        }"
                                    >
                                        <core:Item key="{key}" text="{Name}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                    name="Status"
                                    label="{i18n>labelFilterBarStatus}"
                                    groupName="Basic"
                                    visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                            id="Status"
                                            name="Status"
                                            selectionChange="onSelectionChange"
                                            placeholder="{i18n>productsOverviewStatus}"
                                            items="{
                                                path: '/Statuses',
                                                templateShareable: true
                                            }"
                                    >
                                        <core:Item key="{key}" text="{Name}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                    name="Price"
                                    label="{i18n>labelFilterBarPrice}"
                                    groupName="Basic"
                                    visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiInput
                                            id="productsInput"
                                            placeholder="{i18n>productsOverviewInputPrice}"
                                            showSuggestion="true"
                                            showValueHelp="true"
                                            tokenUpdate="onSelectionChange"
                                            valueHelpRequest="onValueHelpRequest"
                                            suggestionItems="{/Products}"
                                    >
                                        <suggestionItems>
                                            <core:ListItem
                                                    key="{Price}"
                                                    text="{
                                                    path: 'Price',
                                                    formatter: '.formatter.replaceDoubleWhitespaceWithUnicodeSpace'
                                                }"
                                                    additionalText="{
                                                    path: 'Name',
                                                    formatter: '.formatter.replaceDoubleWhitespaceWithUnicodeSpace'
                                                }"
                                            />
                                        </suggestionItems>
                                    </MultiInput>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                    id="productsTable"
                    class="sapUiResponsiveMargin"
                    width="auto"
                    mode="MultiSelect"
                    selectionChange="onSelectionChangeTable"
                    items="{
                        path: '/Products',
                        sorter: {path: 'ID'}
                    }"
                    showOverlay="{appView>/isVisibleOverlay}"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title
                                core:require="{formatMessage: 'sap/base/strings/formatMessage'}"
                                text="{
                                parts: [ 'i18n>productListTitle', '/Products/length' ],
                                formatter: 'formatMessage'
                            }"
                        />
                        <ToolbarSpacer/>
                        <Button
                                icon="sap-icon://create"
                                press="onPressCreateProduct"
                                text="Create"
                        />
                        <Button
                                id="deleteProduct"
                                enabled="{= ${appView>/numberOfItemsToDelete} > 0 ? true : false}"
                                icon="sap-icon://delete"
                                press="onPressDeleteProducts"
                                text="Delete"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="{i18n>productsOverviewColumnName}"/>
                    </Column>
                    <Column hAlign="End">
                        <Text text="{i18n>productsOverviewColumnPrice}"/>
                    </Column>
                    <Column minScreenWidth="Small" demandPopin="true">
                        <Text text="{i18n>productsOverviewColumnCategory}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="false">
                        <Text text="{i18n>productsOverviewColumnSupplier}"/>
                    </Column>
                    <Column hAlign="End">
                        <Text text="{i18n>productsOverviewColumnDate}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>productsOverviewColumnRating}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>productsOverviewColumnState}"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onPressListItem">
                        <cells>
                            <ObjectIdentifier title="{Name}"/>
                            <ObjectNumber
                                    number="{Price}"
                                    unit="{i18n>currency}"
                            />
                            <Text text="{Category/Name}"/>
                            <Text text="{Supplier/Name}"/>
                            <Text
                                    text="{
                                    path: 'Date',
                                    type: 'sap.ui.model.type.Date',
                                    formatOptions: {
                                        style: 'short',
                                        source: {
                                            pattern: 'yyyy-MM-dd'
                                        }
                                    }
                                }"
                            />
                            <RatingIndicator
                                    value="{Rating}"
                                    maxValue="5"
                                    editable="false"
                            />
                            <ObjectStatus
                                    text="{Status}"
                                    icon="{ path: 'Status', formatter: '.formatter.statusIconFormatter' }"
                                    state="{ path: 'Status', formatter: '.formatter.statusFormatter' }"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>